                <h5 class="modal-title">QUẢNG CÁO BÀI ĐĂNG</h5>
                @*<button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>*@
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-3">
                        <button class="btn btn-info" style="margin-bottom:5px" id="1000" name="btnTien">
                            1 ngày
                        </button>
                        1.000 đ
                        <button class="btn btn-info" style="margin-bottom:5px" id="3000" name="btnTien">
                            3 ngày
                        </button>
