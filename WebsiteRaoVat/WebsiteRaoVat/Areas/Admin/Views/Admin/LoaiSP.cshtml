@using WebsiteRaoVat.Models
@model IEnumerable<LoaiSanPham>
@{
    ViewBag.Title = "LoaiSP";
    Layout = "~/Areas/Admin/Views/Admin/layoutAdmin.cshtml";
    WebGrid webGrid = new WebGrid(source: Model, rowsPerPage: 5);
}

<nav aria-label="breadcrumb">
    <ol class="breadcrumb my-breadcrumb">
        <li class="breadcrumb-item">Admin</li>
        <li class="breadcrumb-item active" aria-current="page"><a href="#">Loại sản phẩm</a></li>
    </ol>
</nav>

<div class="grid-product">

    @webGrid.GetHtml(
        tableStyle: "tablesp",
        headerStyle: "gridhead",
        footerStyle: "gỉdfooter",
        rowStyle: "gridrow",
        alternatingRowStyle: "gridaltrow",
        columns: webGrid.Columns(
            webGrid.Column("MaLoaiSP", "Mã loại sản phẩm", style: "id1"),
            webGrid.Column("TenLoaiSP", "Tên loại sản phẩm", style: "id"),
           
            webGrid.Column("Hinh", "Hình ảnh", format: c => @Html.Raw("<img  width=\"200\" height=\"200\"  src=\"" + c.Hinh + "\" >")),

            webGrid.Column(format: c => @Html.ActionLink("Sửa", "SuaLoaiSP", new { id = c.MaLoaiSP})),
            webGrid.Column(format: c => @Html.ActionLink("Xóa", "XoaLoaiSP", new { id = c.MaLoaiSP }))
           ))
</div>

<style>


    .tablesp {
        width: 1100px;
        color: blue;
        border: 1px solid #ed71a3;
        display: table;
          margin-left:50px;
        margin-bottom:20px;
     
    }

    .gridhead {
        background-color: blue;
        height: 50px;
    }

        .gridhead > th > a {
            color: white;
            text-align: center;
            display: table-cell;
        }

    .gridaltrow {
        border: solid;
        height: 150px
    }

    .gridrow {
        border: solid;
        height: 150px
    }

    .id {
        display: table-cell;
    }

    .id1 {
        display: table-cell;
    }
</style>

