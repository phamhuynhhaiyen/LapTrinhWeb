
@model WebsiteRaoVat.Models.DanhMuc
@{
    ViewBag.Title = "XoaDanhMuc";
    Layout = "~/Areas/Admin/Views/Admin/layoutAdmin.cshtml";
}

@using (Html.BeginForm("XoaDanhMuc", "Admin"))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4 style="text-align:center;font-size:30px; color:blue">Xóa thông tin danh mục </h4>
        <br />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div style="padding:10px" class="row">
        <div style="margin-left:20px" class="col">
            @Html.LabelFor(model => model.TenDanhMuc, htmlAttributes: new { @class = "control-label col-md-2" })
        </div>
        <div style="margin-right:420px" class="col-md-6">
            @Html.EditorFor(model => model.TenDanhMuc, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.TenDanhMuc, "", new { @class = "text-danger" })
        </div>
    </div>
        <div style="padding:10px" class="row">
            <div style="margin-left:20px" class="col">
                @Html.LabelFor(model => model.Hinh, htmlAttributes: new { @class = "control-label col-md-2" })
                </div>
                <div style="margin-right:420px" class="col-md-6">
                    <input name="Hinh" type="file" />
                    <span style="color:red">@ViewBag.upload</span>
                    <img src="@Url.Content("~/Content/Images/"+ @Model.Hinh)" width="200" height="200" />
                </div>
            </div>

        <div class="form-group">
            <div style="padding:45px" class="col-md-offset-2 col-md-10">
                <button style="background-color:blue; text-align:center; margin-left:100px;" class="btn btn-default">Xóa</button>
            </div>
        </div>
        </div>
}

