@model WebsiteRaoVat.Models.LoaiSanPham

@{
    ViewBag.Title = "SuaLoaiSP";
    Layout = "~/Areas/Admin/Views/Admin/layoutAdmin.cshtml";
}



@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div style="color:blue" class="form-horizontal">
        <hr />
        <h4 style="text-align:center; padding:10px">Sửa thông tin loại sản phẩm</h4>

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.MaLoaiSP)
        <div style="padding:10px" class="row">
            <div style="margin-left:15px" class="col">
                    @Html.LabelFor(model => model.TenLoaiSP, htmlAttributes: new { @class = "control-label col-md-2" })
                    </div>
                <div style="margin-right:437px " class="col-md-6">
                    @Html.EditorFor(model => model.TenLoaiSP, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.TenLoaiSP, "", new { @class = "text-danger" })
                </div>
                </div>

        <div style="padding:10px" class="row">
            <div style="margin-left:5px" class="col">
                @Html.LabelFor(model => model.MaDanhMuc, htmlAttributes: new { @class = "control-label col-md-2" })
            </div>
            <div style="margin-right:437px " class="col-md-6">
                @Html.DropDownList("MaDanhMuc", null, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.MaDanhMuc, "", new { @class = "text-danger" })
            </div>
        </div>

        <div style="padding:10px" class="row">
            <div style="margin-left:20px" class="col">
                @Html.LabelFor(model => model.Hinh, htmlAttributes: new { @class = "control-label col-md-2" })
            </div>
            <div style="margin-right:437px " class="col-md-6">
                <input name="Hinh" type="file" />
                <span style="color:red">@ViewBag.upload</span>
            </div>
        </div>

        <div class="form-group">
            <div style="padding:50px" class="col-md-offset-2 col-md-10">
                <button style="background-color:blue;font-size: 17px" type="submit">Lưu</button>
            </div>
        </div>
        </div>
            }

